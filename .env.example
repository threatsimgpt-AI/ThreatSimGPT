# ============================================================================
# ThreatSimGPT Environment Configuration Template
# ============================================================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all placeholder values (marked with your_*_here)
# 3. Generate secure secrets: openssl rand -hex 32
# 4. NEVER commit .env to version control
#
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production!)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# SECURITY CONFIGURATION (CRITICAL)
# ============================================================================

# Application secret key - MUST be unique per environment
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_change_in_production

# API Authentication
API_AUTHENTICATION_ENABLED=false  # Set to true in production
API_KEY=your_secure_api_key_here

# Content Safety Controls
ENABLE_CONTENT_FILTERING=true
ENABLE_SAFETY_VALIDATION=true
SAFETY_SCORE_THRESHOLD=0.8
CONTENT_MODERATION=true
COMPLIANCE_MODE=true

# Audit Logging
ENABLE_AUDIT_LOGGING=true

# ============================================================================
# LLM PROVIDER API KEYS
# ============================================================================
# At least one LLM provider is required for content generation.
# Options: OpenRouter (recommended), OpenAI, Anthropic, Azure, or Ollama (local)

# OpenRouter (Recommended) - Access to multiple models
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI (Optional)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Optional)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI (Optional - for enterprise)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# ============================================================================
# LOCAL LLM CONFIGURATION (Ollama)
# ============================================================================
# Enable for offline/air-gapped deployments

OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# ============================================================================
# LLM SETTINGS
# ============================================================================

# Default provider: openrouter, openai, anthropic, ollama, azure
DEFAULT_LLM_PROVIDER=openrouter

# Token and rate limits
MAX_TOKENS_PER_REQUEST=4096
MAX_REQUESTS_PER_MINUTE=60
COST_LIMIT_PER_DAY=100.00

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection (required for production)
DATABASE_URL=postgresql://user:password@localhost:5432/threatsimgpt
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Individual settings (used by Docker)
POSTGRES_USER=threatsimgpt
POSTGRES_PASSWORD=your_database_password_here
POSTGRES_DB=threatsimgpt
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis connection (required for production caching)
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# FILE STORAGE
# ============================================================================

TEMP_DIR=/tmp/threatsimgpt
LOG_DIR=./logs
REPORT_DIR=./reports
GENERATED_CONTENT_DIR=./generated_content
OUTPUT_DIR=./output

# ============================================================================
# DATASET CONFIGURATION
# ============================================================================

THREATSIMGPT_DATASETS_PATH=./data/datasets
THREATSIMGPT_CACHE_PATH=./data/cache
THREATSIMGPT_TEMPLATES_PATH=./templates
THREATSIMGPT_SCENARIOS_PATH=./scenarios

# Dataset Settings
ENABLE_DATASET_INTEGRATION=true
AUTO_DOWNLOAD_DATASETS=false
DATASET_CACHE_TTL=86400
MAX_DATASET_SIZE_GB=5

# ============================================================================
# COMPLIANCE CONFIGURATION
# ============================================================================

ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENABLE_ANONYMIZATION=true
AUDIT_ALL_OPERATIONS=true

# ============================================================================
# RATE LIMITING
# ============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ============================================================================
# SIMULATION SETTINGS
# ============================================================================

MAX_SIMULATION_STAGES=10
MAX_CONCURRENT_SIMULATIONS=5
SIMULATION_TIMEOUT_MINUTES=30
DEFAULT_NUM_VARIATIONS=3
MAX_SIMULATION_DURATION=3600

# ============================================================================
# ENTERPRISE INTEGRATIONS (Optional)
# ============================================================================

# Microsoft 365
M365_TENANT_ID=
M365_CLIENT_ID=
M365_CLIENT_SECRET=

# Proofpoint TAP
PROOFPOINT_API_KEY=
PROOFPOINT_BASE_URL=https://tap-api-v2.proofpoint.com

# KnowBe4
KNOWBE4_API_KEY=
KNOWBE4_BASE_URL=https://us.api.knowbe4.com

# ============================================================================
# EMAIL DEPLOYMENT (Optional)
# ============================================================================

SMTP_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@threatsimgpt.local

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ============================================================================
# DOCKER COMPOSE SETTINGS
# ============================================================================

COMPOSE_PROJECT_NAME=threatsimgpt
COMPOSE_HTTP_TIMEOUT=200

# Volume mounts
DOCKER_VOLUME_DATA=./data
DOCKER_VOLUME_LOGS=./logs
DOCKER_VOLUME_MODELS=./models
DOCKER_VOLUME_TEMPLATES=./templates

# ============================================================================
# PROXMOX/VM CONFIGURATION (Optional)
# ============================================================================

PROXMOX_HOST=192.168.1.100
PROXMOX_PORT=8006
PROXMOX_USER=threatsimgpt@pve
PROXMOX_TOKEN_NAME=automation
PROXMOX_TOKEN_VALUE=your_proxmox_token_here
PROXMOX_NODE=pve

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Hot reload (development only)
HOT_RELOAD=false
DEV_MODE=false

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Skip environment validation (development only)
SKIP_ENV_VALIDATION=false

# ============================================================================
# PRODUCTION CHECKLIST
# ============================================================================
#
# Before deploying to production, ensure:
#
# [ ] SECRET_KEY is generated and unique
# [ ] DEBUG=false
# [ ] ENVIRONMENT=production
# [ ] API_AUTHENTICATION_ENABLED=true
# [ ] All API keys are valid (not placeholder values)
# [ ] Database credentials are secure
# [ ] GRAFANA_ADMIN_PASSWORD is changed
# [ ] CORS_ORIGINS is restricted to your domain
# [ ] ENABLE_CONTENT_FILTERING=true
# [ ] ENABLE_AUDIT_LOGGING=true
#
# ============================================================================
